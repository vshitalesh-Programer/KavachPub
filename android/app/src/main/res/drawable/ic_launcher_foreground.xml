<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="128"
    android:viewportHeight="128">
    
    <!-- Group to scale logo 20% smaller from center -->
    <!-- Scale: 0.45 (57.6dp), pivot at center (64, 64) to keep it centered -->
    <group
        android:scaleX="0.45"
        android:scaleY="0.45"
        android:pivotX="64"
        android:pivotY="64">
        
        <!-- Main shield with gradient (matching LoginScreen pattern) -->
        <path android:pathData="M64 8c12 10 28 12 44 12v40c0 26-18 49-44 60C38 109 20 86 20 60V20c16 0 32-2 44-12z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:startX="0"
                    android:startY="0"
                    android:endX="128"
                    android:endY="128"
                    android:type="linear">
                    <item
                        android:offset="0"
                        android:color="#EF4444"/>
                    <item
                        android:offset="1"
                        android:color="#e98f7c"/>
                </gradient>
            </aapt:attr>
        </path>
        
        <!-- Highlight overlay -->
        <path android:fillColor="#FFFFFF"
            android:fillAlpha="0.14"
            android:pathData="M64 14c9 8 22 10 35 11v33c0 22-15 41-35 50-20-9-35-28-35-50V25c13-1 26-3 35-11z"/>
    </group>
</vector>

